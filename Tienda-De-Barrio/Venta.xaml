<Window x:Class="Tienda_De_Barrio.Venta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Venta - Tienda de Barrio"
        Height="500" Width="800"
        Background="#121212">
    <Window.Resources>
        <!-- Sombra suave para tarjetas -->
        <DropShadowEffect x:Key="SombraTarjeta"
                      BlurRadius="20"
                      ShadowDepth="20"
                      Color="Green" />

        <!-- Estilo básico para botón (opcional, pero bonito) -->
        <Style x:Key="BotonPrimario" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1565C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <!-- Título -->
        <TextBlock Text="SELECCIONA PRODUCTOS"
                   Foreground="#E0E0E0"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,460"/>

        <!-- Panel de productos -->
        <!-- Panel de productos DINÁMICO -->
        <ScrollViewer VerticalScrollBarVisibility="Disabled"
              HorizontalScrollBarVisibility="Auto"
              Margin="0,40,0,80">
            <ItemsControl x:Name="listaProductos" Margin="8">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3" MinWidth="760"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#2A2A2A"
                CornerRadius="10"
                Padding="12"
                Margin="8">
                            <StackPanel>
                                <Border Background="White"
                                    CornerRadius="6"
                                    Width="100" Height="100"
                                    HorizontalAlignment="Center">
                                    <Image Source="{Binding ImagenSource}" 
                                        Stretch="Uniform" Margin="6"/>
                                </Border>
                                <TextBlock Text="{Binding Nombre}" 
                           Foreground="#E0E0E0" 
                           HorizontalAlignment="Center" 
                           Margin="0,6,0,4"/>
                                <TextBox x:Name="txtCantidad"
                         Text="1"
                         HorizontalAlignment="Center"
                         Width="60"
                         Height="26"
                         Background="#333333"
                         Foreground="White"
                         BorderBrush="#555555"
                         BorderThickness="1"
                         TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Botón inferior -->
        <Button Content="VER DETALLE DE VENTA"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Width="200"
                Height="36" Click="Dettale_Click"/>
    </Grid>
</Window>
