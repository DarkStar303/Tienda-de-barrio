<Window x:Class="Tienda_De_Barrio.Administracion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tienda_De_Barrio"
        mc:Ignorable="d"
        Title="Panel de Administración - Tienda de Barrio"
        Height="450" Width="800"
        Background="#121212">

    <Grid>
        <!-- Barra de botones (superior) -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,30,0,0">

            <Button Content="Aumentar producto"
                    Background="#2D2D2D"
                    Foreground="#E0E0E0"
                    BorderBrush="#444444"
                    BorderThickness="1"
                    Width="140"
                    Height="36"
                    FontSize="13"
                    Padding="8,0"/>

            <Button Content="Nuevo producto"
                    Background="#2D2D2D"
                    Foreground="#E0E0E0"
                    BorderBrush="#444444"
                    BorderThickness="1"
                    Width="140"
                    Height="36"
                    FontSize="13"
                    Padding="8,0"
                    Click="Button_Click"/>

            <Button Content="Vender"
                    Background="#1976D2"
                    Foreground="White"
                    BorderThickness="0"
                    Width="106"
                    Height="36"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Padding="8,0"
                    Click="Vender_CLICK"/>

            <Button Content="Crear cuenta"
                    Background="#2D2D2D"
                    Foreground="#E0E0E0"
                    BorderBrush="#444444"
                    BorderThickness="1"
                    Width="106"
                    Height="36"
                    FontSize="13"
                    Padding="8,0" Click="Crear_Click"/>
        </StackPanel>

        <!-- Panel de contenido con sombra -->
        <Border Margin="50,100,50,40"
                Background="#1E1E1E"
                CornerRadius="10"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20"
                                  ShadowDepth="20"
                                  Color="Green" />
            </Border.Effect>

            <!-- Área de texto dinámico -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="txtResumen"
                           Text="Cargando resumen..."
                           Foreground="#E0E0E0"
                           FontFamily="Consolas"
                           FontSize="13"
                           TextWrapping="Wrap"
                           LineHeight="20"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
