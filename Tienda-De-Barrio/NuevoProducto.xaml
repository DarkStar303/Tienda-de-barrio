<Window x:Class="Tienda_De_Barrio.NuevoProducto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Agregar Nuevo Producto"
        Height="500" Width="800"
        Background="#121212">

    <Grid Margin="25">
        <TextBlock Text="AGREGAR NUEVO PRODUCTO"
                   Foreground="#E0E0E0"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,450"/>

        <!-- Formulario izquierdo -->
        <StackPanel Margin="46,57,310,29">
            <!-- Nombre -->
            <TextBlock Text="NOMBRE DEL PRODUCTO"
                       Foreground="#B0B0B0"
                       FontSize="12"
                       Margin="0,0,0,4"/>
            <TextBox x:Name="txtNombre"
                     Background="#2D2D2D"
                     Foreground="#FFFFFF"
                     BorderBrush="#444444"
                     BorderThickness="1"
                     Height="36"
                     FontSize="14"
                     Padding="8"
                     Margin="0,0,0,16"/>

            <!-- Precio -->
            <TextBlock Text="PRECIO UNITARIO (Bs)"
                       Foreground="#B0B0B0"
                       FontSize="12"
                       Margin="0,0,0,4"/>
            <TextBox x:Name="txtPrecio"
                     Background="#2D2D2D"
                     Foreground="#FFFFFF"
                     BorderBrush="#444444"
                     BorderThickness="1"
                     Height="41"
                     FontSize="14"
                     Padding="8"
                     Margin="0,0,0,16"/>

            <!-- Stock (opcional) -->
            <TextBlock Text="STOCK INICIAL"
                       Foreground="#B0B0B0"
                       FontSize="12"
                       Margin="0,0,0,4"/>
            <TextBox x:Name="txtStock"
                     Text="10"
                     Background="#2D2D2D"
                     Foreground="#FFFFFF"
                     BorderBrush="#444444"
                     BorderThickness="1"
                     Height="39"
                     FontSize="14"
                     Padding="8"
                     Margin="0,0,0,24"/>

            <!-- Botón para seleccionar imagen -->
            <Button x:Name="btnSeleccionarImagen"
                    Content="SELECCIONAR IMAGEN"
                    Background="#2D2D2D"
                    Foreground="#E0E0E0"
                    BorderBrush="#444444"
                    BorderThickness="1"
                    Height="34"
                    FontSize="13"
                    Margin="0,0,0,16"
                    Click="BtnSeleccionarImagen_Click"/>

            <!-- Botones de acción -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="CANCELAR"
                        Width="100" Height="34"
                        Click="Cancelar_Click"/>
                <Button Content="GUARDAR"
                        Width="100" Height="34"
                        Click="Guardar_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Vista previa de imagen (derecha) -->
        <Border Background="#1E1E1E"
                CornerRadius="10"
                Width="280" Height="320"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Padding="15" Margin="445,0,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="16" ShadowDepth="0" Color="#33000000"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="VISTA PREVIA"
                   Foreground="#B0B0B0"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>
                <Image x:Name="imgPreview"
               Width="200" Height="200"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               Margin="0,0,0,10"/>
                <TextBlock x:Name="lblRutaImagen"
                   Text="Sin imagen seleccionada"
                   Foreground="#888888"
                   FontSize="10"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
