<Window x:Class="Tienda_De_Barrio.CrearCuenta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Crear Nueva Cuenta - Tienda de Barrio"
        Height="450" Width="800"
        Background="#121212">
    <Grid>
        <!-- Contenedor central -->
        <Border Background="#1E1E1E"
                CornerRadius="12"
                Width="400"
                Height="350"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="25">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="0" Color="Green"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Top">
                <!-- Título -->
                <TextBlock Text="CREAR NUEVA CUENTA"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#E0E0E0"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Usuario -->
                <TextBlock Text="NOMBRE DE USUARIO"
                           FontSize="12"
                           Foreground="#B0B0B0"/>
                <TextBox x:Name="txtUsuario"
                         Background="#2D2D2D"
                         Foreground="#FFFFFF"
                         BorderBrush="#444444"
                         BorderThickness="1"
                         Height="35"
                         FontSize="14"
                         Padding="8"
                         Margin="0,0,0,12"/>

                <!-- Contraseña -->
                <TextBlock Text="CONTRASEÑA"
                           FontSize="12"
                           Foreground="#B0B0B0"/>
                <PasswordBox x:Name="txtPassword"
                             Background="#2D2D2D"
                             Foreground="#FFFFFF"
                             BorderBrush="#444444"
                             BorderThickness="1"
                             Height="35"
                             FontSize="14"
                             Padding="8"
                             Margin="0,0,0,20"/>

                <!-- Rol -->
                <TextBlock Text="ROL"
                           FontSize="12"
                           Foreground="#B0B0B0"
                           Margin="0,0,0,6"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="rbAdmin"
                                 Content="ADMINISTRADOR"
                                 Foreground="#E0E0E0"
                                 FontSize="13"
                                 GroupName="Rol"/>
                    <RadioButton x:Name="rbEmpleado"
                                 Content="EMPLEADO"
                                 Foreground="#E0E0E0"
                                 FontSize="13"
                                 GroupName="Rol"
                                 IsChecked="True"/>
                </StackPanel>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,24,0,0">
                    <Button Content="CANCELAR"
                            Width="120" Height="36"
                            Click="Cancelar_Click"/>
                    <Button Content="CREAR CUENTA"
                            Width="120" Height="36"
                            Background="#1976D2"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Click="CrearCuenta_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>