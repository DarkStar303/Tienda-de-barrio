<Window x:Class="Tienda_De_Barrio.DetalleVenta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Detalle de Venta"
        Height="500" Width="800"
        Background="#121212">

    <Grid Margin="20">
        <!-- Título -->
        <TextBlock Text="DETALLE DE VENTA"
                   Foreground="#E0E0E0"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,450"/>

        <!-- Panel principal con sombra -->
        <Border Background="#1E1E1E"
                CornerRadius="12"
                Padding="20"
                Margin="0,50,0,80">
            <Border.Effect>
                <DropShadowEffect BlurRadius="16" ShadowDepth="0" Color="#33000000"/>
            </Border.Effect>

            <Grid>
                <!-- Fecha -->
                <TextBlock x:Name="txtFecha"
                           Text="Fecha: 03/12/2025 14:30"
                           Foreground="#B0B0B0"
                           FontSize="13"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"/>

                <!-- Lista de productos -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Margin="0,30,0,60">
                    <StackPanel x:Name="stackProductos">
                    </StackPanel>
                </ScrollViewer>

                <!-- Total -->
                <TextBlock x:Name="txtTotal"
                           Text="TOTAL: Bs 25.50"
                           Foreground="#FF5252"
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"/>
            </Grid>
        </Border>

        <!-- Botones -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">
            <Button Content="ATRÁS"
                    Width="100" Height="34"
                    Click="Atras_Click"/>
            <Button Content="VENDER"
                    Width="100" Height="34"
                    Click="Vender_Click"/>
        </StackPanel>
    </Grid>
</Window>
