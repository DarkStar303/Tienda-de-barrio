<Window x:Class="Tienda_De_Barrio.AumentarStock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Aumentar Stock de Productos"
        Height="400" Width="600"
        Background="#121212">

    <Grid Margin="25">
        <TextBlock Text="AUMENTAR STOCK"
                   Foreground="#E0E0E0"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,340"/>

        <StackPanel Width="400" HorizontalAlignment="Center" Margin="0,60,0,60">
            <!-- Selector de producto -->
            <TextBlock Text="SELECCIONAR PRODUCTO"
                       Foreground="#B0B0B0"
                       FontSize="12"
                       Margin="0,0,0,4"/>
            <ComboBox x:Name="cmbProductos"
                      Background="#2D2D2D"
                      Foreground="#FFFFFF"
                      BorderBrush="#444444"
                      BorderThickness="1"
                      Height="32"
                      FontSize="14"
                      Padding="8"
                      Margin="0,0,0,20"/>

            <!-- Cantidad a agregar -->
            <TextBlock Text="CANTIDAD A AGREGAR"
                       Foreground="#B0B0B0"
                       FontSize="12"
                       Margin="0,0,0,4"/>
            <TextBox x:Name="txtCantidad"
                     Text="1"
                     Background="#2D2D2D"
                     Foreground="#FFFFFF"
                     BorderBrush="#444444"
                     BorderThickness="1"
                     Height="32"
                     FontSize="14"
                     Padding="8"
                     Margin="0,0,0,24"/>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="CANCELAR"
                        Width="100" Height="34"
                        Click="Cancelar_Click"/>
                <Button Content="ACTUALIZAR"
                        Width="100" Height="34"
                        Click="Actualizar_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
