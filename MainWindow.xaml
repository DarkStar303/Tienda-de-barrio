<Window x:Class="Tienda_De_Barrio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tienda_De_Barrio"
        mc:Ignorable="d"
        Title="Inicio de Sesión - Tienda de Barrio"
        Height="450" Width="800"
        Background="#121212">
    <Grid>
        <!-- Contenedor central con fondo oscuro más claro -->
        <Border Background="#1E1E1E"
                CornerRadius="12"
                Width="400"
                Height="325"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="25">
            <Border.Effect>
                <DropShadowEffect BlurRadius="50"
                          ShadowDepth="20"
                          Color="Green" />
            </Border.Effect>

            <StackPanel VerticalAlignment="Top">

                <!-- Título -->
                <TextBlock Text="INICIO DE SESIÓN"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#E0E0E0"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Campo: Usuario -->
                <TextBlock Text="USUARIO"
                           FontSize="12"
                           Foreground="#B0B0B0"/>
                <TextBox x:Name="txtUsuario"
                         Background="#2D2D2D"
                         Foreground="#FFFFFF"
                         BorderBrush="#444444"
                         BorderThickness="1"
                         Height="35"
                         FontSize="14"
                         Padding="8"/>

                <!-- Campo: Contraseña -->
                <TextBlock Text="CONTRASEÑA"
                           FontSize="12"
                           Foreground="#B0B0B0"
                           Margin="0,8,0,0"/>
                <PasswordBox x:Name="txtPassword"
                             Background="#2D2D2D"
                             Foreground="#FFFFFF"
                             BorderBrush="#444444"
                             BorderThickness="1"
                             Height="35"
                             FontSize="14"
                             PasswordChar="*"
                             Padding="8"/>

                <!-- Opción de rol -->
                <TextBlock Text="ROL"
                           FontSize="12"
                           Foreground="#B0B0B0"
                           Margin="0,12,0,6"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="rbAdmin"
                                 Content="ADMINISTRADOR"
                                 Foreground="#E0E0E0"
                                 FontSize="13"
                                 GroupName="Rol"/>
                    <RadioButton x:Name="rbEmpleado"
                                 Content="EMPLEADO"
                                 Foreground="#E0E0E0"
                                 FontSize="13"
                                 GroupName="Rol"
                                 IsChecked="True"/>
                </StackPanel>

                <!-- Botón -->
                <Button x:Name="btnSiguiente"
                        Content="INICIAR SESIÓN"
                        Background="#1976D2"
                        Foreground="White"
                        BorderThickness="0"
                        Height="36"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Margin="0,24,0,0"
                        Padding="10,0"
                        HorizontalAlignment="Stretch" Click="btnSiguiente_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
